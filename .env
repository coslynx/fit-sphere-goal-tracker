# Environment configuration: development, test, or production
NODE_ENV=development

# Base URL for the backend API
REACT_APP_API_BASE_URL=http://localhost:3001

# MongoDB Atlas connection URI
MONGODB_URI=mongodb+srv://<YOUR_MONGODB_USER>:<YOUR_MONGODB_PASSWORD>@your-cluster.mongodb.net/fitnesstracker?retryWrites=true&w=majority

# MongoDB Atlas username
MONGODB_USER=<YOUR_MONGODB_USER>

# MongoDB Atlas password
MONGODB_PASSWORD=<YOUR_MONGODB_PASSWORD>

# JWT secret key for signing JSON Web Tokens
JWT_SECRET_KEY=YOUR_VERY_STRONG_SECRET_KEY

# Number of salt rounds for bcrypt password hashing
BCRYPT_SALT_ROUNDS=10

# Facebook App ID for social sharing (if applicable)
FACEBOOK_APP_ID=

# Twitter API Key for social sharing (if applicable)
TWITTER_API_KEY=